<div id="account-recovery-confirm-revoke">
    <section class="modal-panel">
        <div class="error"></div>

        <form novalidate>
            <h3>{{#t}}Are you sure you want to revoke?{{/t}}</h3>
            <p class="revoke-description">{{#t}}You will be unable to use your recovery key to access your data in the event you reset your password.{{/t}}</p>

            <div class="button-row">
                <button action="submit" class="settings-button warning-button revoke">{{#t}}Revoke{{/t}}</button>
                <button class="settings-button secondary-button cancel-button">{{#t}}Cancel{{/t}}</button>
            </div>
        </form>
    </section>
</div>
