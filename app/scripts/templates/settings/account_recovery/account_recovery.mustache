<div id="account-recovery-section" class="settings-unit {{#isPanelOpen}}open{{/isPanelOpen}} account-recovery-panel">
    <div class="settings-unit-stub">
        <header class="settings-unit-summary">
            <h2 class="settings-unit-title">{{#t}}Account recovery{{/t}}</h2>
        </header>

        {{^hasRecoveryKey}}
            <button class="settings-button primary-button settings-unit-toggle" data-href="settings/account_recovery">
                {{#t}}Enable…{{/t}}
            </button>
        {{/hasRecoveryKey}}

        {{#hasRecoveryKey}}
            <button class="settings-button secondary-button settings-unit-toggle" data-href="settings/account_recovery">
                {{#t}}Change…{{/t}}
            </button>
        {{/hasRecoveryKey}}
    </div>


    <div class="settings-unit-details">
        <p>{{#t}}Generate a recovery key to regain access to your Firefox bookmarks, passwords, and synced data if you forget your password.{{/t}}</p>

        <div class="list">
            <ul id="status">
                <li class="type">
                    <div class="recovery-key-icon">
                        <div class="name">{{#t}}Recovery key{{/t}}</div>
                        <div class="details">
                            {{#hasRecoveryKey}}
                                <div class="enabled">{{#t}}Enabled{{/t}}</div>
                            {{/hasRecoveryKey}}
                            {{^hasRecoveryKey}}
                                <div class="disabled">{{#t}}Not set{{/t}}</div>
                            {{/hasRecoveryKey}}
                        </div>
                    </div>

                    <div class="panel-settings-button-group">
                        {{#hasRecoveryKey}}
                            <button class="settings-button warning-button confirm-revoke">{{#t}}Revoke{{/t}}</button>
                        {{/hasRecoveryKey}}
                        {{^hasRecoveryKey}}
                            <button class="settings-button primary-button confirm-password">{{#t}}Generate{{/t}}</button>
                        {{/hasRecoveryKey}}
                    </div>
                </li>
            </ul>

            <p>{{#unsafeTranslate}}<span class="note">NOTE: </span>Your Firefox Account password encrypts your Firefox data. Only your password or recovery key can access your data. <a %(escapedLearnMoreLinkAttributes)s>Learn more</a>{{/unsafeTranslate}}</p>

            <div class="button-row">
                <button class="settings-button primary-button refresh-status">{{#t}}Refresh Status{{/t}}</button>
                <button class="settings-button cancel secondary-button enabled">{{#t}}Done{{/t}}</button>
            </div>
        </div>
    </div>
</div>
