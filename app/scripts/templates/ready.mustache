<div id="main-content" class="card">
  <header>
    <h1 id="{{headerId}}">{{{escapedHeaderTitle}}}</h1>
  </header>

  <section>
    <div class="error"></div>

    <div class="graphic graphic-checkbox">{{#t}}Success{{/t}}</div>

    {{#isSync}}
      <p class="account-ready-service">{{{escapedReadyToSyncText}}}</p>
    {{/isSync}}

    {{^isSync}}
      {{#serviceName}}
        <p class="account-ready-service">{{#t}}You are now ready to use %(serviceName)s{{/t}}</p>
          {{#showContinueButton}}
              <div class="button-row">
                  <button class="primary-button btn-continue">{{#t}}Continue{{/t}}</button>
              </div>
          {{/showContinueButton}}
      {{/serviceName}}
      {{^serviceName}}
          {{#emailVerified}}
              <p class="account-ready-service">{{{escapedEmailReadyText}}}</p>
          {{/emailVerified}}

          {{^emailVerified}}
              <p class="account-ready-generic">{{#t}}Your account is ready!{{/t}}</p>
          {{/emailVerified}}
      {{/serviceName}}
    {{/isSync}}

      {{#isPasswordReset}}
          <div class="button-row">
              <button class="primary-button btn-create-recovery-key">{{#t}}Generate a new recovery key{{/t}}</button>
              <button class="button-link btn-goto-account">{{#t}}Continue to my account{{/t}}</button>
          </div>
      {{/isPasswordReset}}

      <div class="marketing-area"></div>
  </section>
</div>

